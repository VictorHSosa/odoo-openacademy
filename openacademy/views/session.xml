<odoo>
    <data>
        <record model="ir.ui.view" id="session_form_view">
            <field name="name">session.form</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <form string="Session Form">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="start_date" />

                            <field name="duration" />
                            <field name="end_date" />
                            <field name="seats" />
                            <field name="taken_seats" widget="progressbar" />
                            <field name="instructor_id" />
                            <field name="course_id" />
                            <label for="attendee_ids" />
                            <field name="attendee_ids" />
                            <field name="active" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>ยบ
        <record model="ir.ui.view" id="session_tree_view">
            <field name="name">session.list</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <tree string="Session  Tree" decoration-success="duration &gt; 5 and duration &lt;15" decoration-info="duration&lt;5" decoration-danger="duration&gt;15">
                    <field name="name" />
                    <field name="start_date" />
                    <field name="duration" />
                    <field name="end_date" />
                    <field name="seats" />
                    <field name="taken_seats" widget="progressbar" />
                    <field name="instructor_id" />
                    <field name="course_id" />
                    <field name="attendee_ids" />
                    <field name="active" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="session_search_view">
            <field name="name">session.list</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <search string="Session Search">
                    <field name="name" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="duration" />
                    <field name="seats" />
                    <field name="instructor_id" />
                    <field name="course_id" />
                    <field name="attendee_ids" />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="openacademy.session_list_action">
              <field name="name">Session</field>
              <field name="res_model">openacademy.session</field>
              <field name="view_type">form</field>
              <field name="view_mode">tree,form</field>
              <field name="help" type="html">
                    <p class="oe_view_nocontent_create">Create session</p>
              </field>
        </record>
        <menuitem name="Session" id="openacademy.menu_3"    parent="openacademy.menu_1" action="session_list_action"/>
    </data>
</odoo>